{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}



<section  class = "articles">

{% for article in articles %}
    <article>
        <h2>{{article.title}}</h2>
        <div class ="metadata">Ecrit le {{article.createdAt | date('m/d/y') }} à l'heure {{article.createdAt | date('h:i') }}dans la catégorie {{article.category.title}}</div>
        <div class="content">
        <img src= "{{ article.image }}" alt ="">
        {{ article.content | raw}}
        <br><a href ="{{ path('autre_blog', {'id' : article.id}) }}"  class ="btn btn-primary">lire la suite</a>
        <br><br><a href ="{{ path('delete_blog', {'id' : article.id}) }}"  class ="btn btn-danger">Supprimer</a>
        <br><br><a href ="{{ path('blog_edit', {'id' : article.id}) }}"  class ="btn btn-primary">Modifier</a><br>
    </article>

{% endfor %}

</section>
{% endblock %}
